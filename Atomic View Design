<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        canvas {
            background: #eee;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>

<canvas id="myCanvas" width="480" height="320"></canvas>

<script>

    var nucleusImage = new Image();
    nucleusImage.src ="Resources/Nucleus.png";

    var electronImage = new Image();
    electronImage.src ="Resources/Electrons.png";

    var nucleusX = canvas.width/2;
    var nucleusY = canvas.height/2;
    var electronPairs = 4;

    function drawNucleus()
    {
        ctx.beginPath();
        ctx.arc(nucleusX, nucleusY, 15, 0, Math.PI * 2);
        ctx.fillStyle = "#0095DD";
        ctx.fill();
        ctx.closePath();
    }

    function drawElectronPairs()
    {
        if (electronPairs === 4){
            ctx.beginPath();
            ctx.arc(nucleusX - 20, nucleusY, 15, 0, Math.PI * 2);
            ctx.arc(nucleusX, nucleusY - 20, 15, 0, Math.PI * 2);
            ctx.fillStyle = "#0095DD";
            ctx.fill();
            ctx.closePath();
        }
    }

    function draw()
    {
        drawNucleus();
        drawElectronPairs();

        requestAnimationFrame(draw);
    }

    draw();
</script>
</body>
</html>
